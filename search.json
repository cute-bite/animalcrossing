---
layout: null
permalink: /search.json
---
[
  {%- assign pages = site.pages | where_exp:'p','p.search != false' -%}
  {%- for p in pages -%}
  {
    "title": {{ p.title | jsonify }},
    "url": {{ p.url | relative_url | jsonify }},
    "content": {{ p.content | strip_html | truncate: 500 | jsonify }}
  }{%- unless forloop.last -%},{%- endunless -%}
  {%- endfor -%}
  {%- for coll in site.collections -%}
    {%- assign docs = coll.docs -%}
    {%- for d in docs -%}
    ,{
      "title": {{ d.title | default: d.name | jsonify }},
      "url": {{ d.url | relative_url | jsonify }},
      "content": {{ d.content | strip_html | truncate: 500 | jsonify }}
    }
    {%- endfor -%}
  {%- endfor -%}
]
